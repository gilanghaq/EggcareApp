<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.EggcareApp" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/neutral_900</item>
        <item name="android:windowLightStatusBar">true</item>
        <!-- Customize your theme here. -->
        <item name="android:colorEdgeEffect">@color/neutral_400</item>
    </style>

    <style name="splashScreenTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_img</item>
        <item name="android:statusBarColor">@color/primary</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:colorEdgeEffect">@color/neutral_400</item>
    </style>

    <style name="colored_checkbox" parent="Theme.MaterialComponents.Light">
        <item name="colorAccent">@color/primary</item>
        <item name="android:textColorSecondary">@color/neutral_200</item>
    </style>

    <style name="activedActionBar" parent="Theme.MaterialComponents.Light.DarkActionBar.Bridge">
        <item name="colorAccent">@color/neutral_900</item>
        <item name="android:statusBarColor">@color/primary</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="TextAppearance.AppCompat.Widget.ActionBar.Title" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/neutral_900</item>
        <item name="android:fontFamily">@font/satoshi_medium</item>
        <item name="android:textSize">18sp</item>
    </style>

</resources>